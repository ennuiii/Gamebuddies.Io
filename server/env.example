# Server Configuration
PORT=3033
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Game URLs - Replace these with your actual Render.com game URLs
# Example: If your game is hosted at https://my-ddf-game.onrender.com
# then set DDF_URL=https://my-ddf-game.onrender.com

DDF_URL=https://your-ddf-game.onrender.com
SCHOOLED_URL=https://your-schooled-game.onrender.com

# Add more games as needed:
# GAME3_URL=https://your-third-game.onrender.com

# API Keys for external game services (auto-generated during setup)
DDF_API_KEY=auto-generated-during-setup
SCHOOLED_API_KEY=auto-generated-during-setup

# GameBuddies Configuration
GAMEBUDDIES_URL=http://localhost:3033
CORS_ORIGINS=http://localhost:3000,http://localhost:3033

# GameBuddies API Configuration for External Games
# These are used by external games to connect back to GameBuddies
REACT_APP_GAMEBUDDIES_API_URL=http://localhost:3033
REACT_APP_DDF_API_KEY=gb_ddf_your_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration  
SESSION_TIMEOUT_MINUTES=30
ROOM_EXPIRY_HOURS=24